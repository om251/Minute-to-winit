    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Game Data with updated, working webpage links
            const games = [
                { title: 'Face the Cookie', category: 'silly', desc: 'Use facial muscles to move a cookie from forehead to mouth.', pageUrl: 'https://www.playpartyplan.com/face-the-cookie-game/' },
                { title: 'Stack Attack', category: 'dexterity', desc: 'Stack 36 cups into a pyramid, then deconstruct it.', pageUrl: 'https://www.playpartyplan.com/cup-stacking-game/' },
                { title: 'Junk in the Trunk', category: 'silly', desc: 'Shake ping pong balls out of a tissue box on your back.', pageUrl: 'https://www.playpartyplan.com/junk-in-the-trunk-game/' },
                { title: 'Noodle Pickup', category: 'dexterity', desc: 'Use a spaghetti noodle in your mouth to pick up 6 penne pastas.', pageUrl: 'https://icebreakerideas.com/noodle-pickup/' },
                { title: 'Defying Gravity', category: 'balance', desc: 'Keep 3 balloons in the air using only your hands.', pageUrl: 'https://icebreakerideas.com/defying-gravity/' },
                { title: 'Suck It Up', category: 'dexterity', desc: 'Use a straw to transfer candies from one plate to another.', pageUrl: 'https://icebreakerideas.com/suck-it-up/' },
                { title: 'Penny Hose', category: 'silly', desc: 'Retrieve a penny from each leg of a pair of pantyhose.', pageUrl: 'https://www.cool-party-games.com/penny-hose.html' },
                { title: 'Movin\' On Up', category: 'dexterity', desc: 'Move a stack of cups from bottom to top, one by one.', pageUrl: 'https://www.thedatingdivas.com/minute-to-win-it-games/' },
                { title: 'Office Tennis', category: 'balance', desc: 'Volley a crumpled paper ball into a bin using a clipboard.', pageUrl: 'https://www.playpartyplan.com/minute-to-win-it-games-for-work/' },
                { title: 'Bite Me', category: 'silly', desc: 'Lift paper bags of varying sizes using only your mouth.', pageUrl: 'https://www.cool-party-games.com/bite-me.html' },
                { title: 'Sticky Situation', category: 'balance', desc: 'Roll a marble so it sticks to double-sided tape.', pageUrl: 'https://icebreakerideas.com/sticky-situation/' },
                { title: 'Cookie Stack', category: 'balance', desc: 'Stack as many cookies as possible on your forehead.', pageUrl: 'https://www.playpartyplan.com/oreo-stack-game/' }
            ];

            const gameGrid = document.getElementById('game-grid');
            const filterButtons = document.querySelectorAll('.game-filter-btn');

            const displayGames = (filter) => {
                gameGrid.innerHTML = '';
                const filteredGames = games.filter(game => filter === 'all' || game.category === filter);
                
                filteredGames.forEach(game => {
                    const card = `
                        <a href="${game.pageUrl}" target="_blank" rel="noopener noreferrer" class="game-card block bg-white rounded-xl shadow-md hover:shadow-xl hover:-translate-y-1 transition-all duration-300 p-5" data-category="${game.category}">
                            <h3 class="text-xl font-bold text-slate-800">${game.title}</h3>
                            <p class="text-slate-600 mt-2 h-12">${game.desc}</p>
                            <div class="mt-4 text-sm font-semibold text-sky-600">
                                View Instructions ‚Üó
                            </div>
                        </a>
                    `;
                    gameGrid.innerHTML += card;
                });
            };
            
            filterButtons.forEach(button => {
                button.addEventListener('click', () => {
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    button.classList.add('active');
                    displayGames(button.dataset.filter);
                });
            });

            // Initial display
            displayGames('all');

            // Benefit Cards Interaction
            const benefitCards = document.querySelectorAll('.benefit-card');
            benefitCards.forEach(card => {
                card.addEventListener('click', () => {
                    card.classList.toggle('open');
                });
            });

            // Budget Chart
            const ctx = document.getElementById('budgetChart').getContext('2d');
            const budgetChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Materials', 'Prizes'],
                    datasets: [{
                        data: [20, 10], // Updated budget: $20 materials, $10 prizes
                        backgroundColor: [
                            '#38bdf8', // sky-400
                            '#f59e0b'  // amber-500
                        ],
                        borderColor: '#f1f5f9', // slate-100
                        borderWidth: 4,
                        hoverOffset: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '60%',
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                color: '#475569', // slate-600
                                font: {
                                    size: 14,
                                    family: 'Inter'
                                }
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed !== null) {
                                        label += new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(context.parsed);
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });

            // Active Nav Link on Scroll
            const sections = document.querySelectorAll('section');
            const navLinks = document.querySelectorAll('.nav-link');

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        navLinks.forEach(link => {
                            link.classList.remove('active');
                            if (link.getAttribute('href').substring(1) === entry.target.id) {
                                link.classList.add('active');
                            }
                        });
                    }
                });
            }, { rootMargin: '-50% 0px -50% 0px' });

            sections.forEach(section => {
                observer.observe(section);
            });
        });
    </script>
</body>
